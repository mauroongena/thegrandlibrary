// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/app/_generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id             String  @id @default(cuid())
  email          String  @unique
  hashedPassword String
  role           Role 
  wishlist  Wishlist[]
  ratings  Rating[]
  loans    Loan[]
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  image       String? 
  pages       Int?
  year        Int?
  author      AuthorBook[]
  publisher   String?
  genres      BookGenre[]
  wishlist    Wishlist[]
  ratings  Rating[]
  loans      Loan[]
}

model Genre {
  id     Int      @id @default(autoincrement())
  title  String
  books  BookGenre[]
}

model Author {
  id   Int    @id @default(autoincrement())
  title  String
  books AuthorBook[]
}

model BookGenre {
  bookId  Int
  genreId Int

  book   Book  @relation(fields: [bookId], references: [id])
  genre  Genre @relation(fields: [genreId], references: [id])

  @@id([bookId, genreId])
}

model AuthorBook {
  authorId Int
  bookId   Int

  author Author @relation(fields: [authorId], references: [id])
  book   Book   @relation(fields: [bookId], references: [id])

  @@id([authorId, bookId])
}

model Wishlist {
  id        Int      @id @default(autoincrement())
  userId    String
  bookId    Int
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  book      Book     @relation(fields: [bookId], references: [id])

  @@unique([userId, bookId])
}

model Rating {
  id        Int      @id @default(autoincrement())
  value     Int      
  review    String? 
  createdAt DateTime @default(now())

  user   User @relation(fields: [userId], references: [id])
  userId String

  book   Book @relation(fields: [bookId], references: [id])
  bookId Int

  @@unique([userId, bookId])
}

model Loan {
  id         Int      @id @default(autoincrement())
  userId     String
  bookId     Int
  loanedAt   DateTime @default(now())
  dueAt      DateTime?
  returnedAt DateTime?

  user User @relation(fields: [userId], references: [id])
  book Book @relation(fields: [bookId], references: [id])
}
